#include <stdio.h>

int main()
{
    int i;
    char znak;
    float tablica[5];
    float suma, wmax, wmin, wsr; //zmienne
    FILE *wsk;
    //menu
    printf("\nMenu");
    printf("\n1. Wprowadz dane");
    printf("\n2. Zapisz dane do pliku");
    printf("\n3. Pobierz dane z pliku");
    printf("\n4. Wartosc minimalna i maksymalna");
    printf("\n5. Wartosc srednia");
    printf("\n6. Suma");
    printf("\n7. Koniec");
    //program
    do
    {
        fflush(stdin);
        printf("\nWybor: ");
        scanf("%c", &znak);
        switch(znak) //switchcase
        {
        case '1' :
            for(i=0;i<5;i++)
            {
                printf("\nPodaj element tablicy[%d] = ",i);
                scanf("%f",&tablica[i]);
            };
            break;
        case '2' :
            printf("\nZapis danych\n");
            if((wsk=fopen("dane.txt","w"))!=NULL)
            {
                for(i=0;i<5;i++)
                    fprintf(wsk, "%f\n", tablica[i]);
                fclose(wsk);
            };
            break;
        case '3' :
            printf("\nWczytywanie danych\n");
            if((wsk=fopen("dane.txt", "r"))!=NULL)
            {
                for(i=0;i<5;i++)
                    fscanf(wsk, "%f", &tablica[i]);
                fclose(wsk);
            };

            break;
        case '4' :
            printf("\nWartosc minimalna i maksymalna");
            wmin=tablica[0];
            for(i=0;i<5;i++)
                if(wmin>tablica[i])
                wmin=tablica[i];
            printf("\nNajmniejsza liczba to: %f", wmin);

            wmax=tablica[0];
            for(i=0;i<5;i++)
                if(wmax<tablica[i])
                wmax=tablica[i];
            printf("\nNajwieksza liczba to: %f", wmax);
            break;
        case '5' :
            printf("\nWartosc srednia");
            wsr=0;
            for(i=0;i<5;i++)
                wsr=wsr+tablica[i];
            printf("\nWartosc srednia wynosi: %f", wsr/i);
            break;
        case '6' :
            suma=0;
            for(i=0;i<5;i++)
                suma=suma+tablica[i];
            printf("\nSuma wszystkich elementow tablicy wynosi: %f\n", suma);
            break;
        case '7' :
            printf("\nKoniec");
            break;
        default :
            printf("\nWybierz ponownie");
        };
    }
    while (znak!='7');
    return 0;
}
